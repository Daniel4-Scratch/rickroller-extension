
{
  "name": "Content Blocker",
  "description": "Light weight content blocker",
  "author": "Qwerty Software",
  "version": "1.3.1",
  "manifest_version": 2,

  "chrome_url_overrides" : {
    "newtab": "popup.html"
  },

  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": ["popup.html", "video.mp4", "script.js"],


  "browser_specific_settings": {
    "gecko": {
      "id": "daniel4scratchhelp@gmail.com"
    }
  }

}
