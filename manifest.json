
{
  "name": "Content Blocker",
  "description": "Light weight content blocker",
  "version": "1.2.0",
  "manifest_version": 2,

  "chrome_url_overrides" : {
    "newtab": "popup.html"
  },

  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": ["popup.html"],

  "options_ui": {
    "page": "options.html"
  },

  "homepage_url": "https://github.com/Daniel4-Scratch/rickroller-extension",

  "browser_specific_settings": {
    "gecko": {
      "id": "llama552621@gmail.com"
    }
  }

}
